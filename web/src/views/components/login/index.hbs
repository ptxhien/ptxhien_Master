{{#if isLogged}}
{{else}}
<!-- login modal start -->
<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
    <div class="modal-content">
      <div class="modal-header border-bottom-0">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="form-title text-center">
          <h2 style="color: #ffb606; font-weight: 600;">LOGIN</h2>
        </div>
        <div class="row">
          <div class="col-md-4">
            <div class="contact-r-thumb">
              <img src="/assets/HomePage/img/bg/contact-right-thumb.png" alt="image">
            </div>
          </div>
          <div class="col-md-8">
            <div class="wpcf7">
              <div class="screen-reader-response"></div>
              <form action="/auth/login" method="post" id="login-form">
                <div class="row">
                  <div class="col-md-12">
                    <label class="text-left" style="color: #ffb606">Email</label>
                    <input type="email" name="c_email" id="c_email" placeholder="Email">
                  </div>
                  <div class="col-md-12">
                    <label class="text-left" style="color: #ffb606">Password</label>
                    <input type="password" name="password" id="password" placeholder="Password">
                  </div>
                </div>
                <button type="submit" id="c_submit">Login</button>
              </form>
            </div>
          </div>
        
        </div>
      </div>
      <div class="modal-footer d-flex justify-content-center">
        <div class="signup-section">Not a member yet? <a href="/auth/register" class="text-info"> Sign Up</a>.</div>
      </div>
    </div>
  </div>
</div>
<!-- login modal end -->
{{/if}}